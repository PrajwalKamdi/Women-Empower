{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "es2022"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ] // ⬅️ so "@/app/..." resolves to "src/app/..."
    },
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.*",
    "src/**/*",
    "tailwind.config.*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
